---
import { Image } from "astro:assets";
import placeholderImg from "../assets/placeholder-img.png";
const { href, title, text, imgSrc, imgAlt } = Astro.props;
---

<a href={href}>
  <li class="smol-card-component">
    {
      imgSrc ? (
        <Image class="img" src={placeholderImg} alt={imgAlt} />
      ) : (
        <Image class="img" src={placeholderImg} alt={imgAlt} />
      )
    }<div>
      <h1>{title}</h1>
      <p>{text}</p>
    </div>
  </li>
</a>

<style>
  a {
    text-decoration: none;
  }

  li {
    list-style: none;

    display: flex;
    gap: 1.1ch;
    flex-wrap: wrap;

    color: black;
    border: 2px dashed black;
    border-radius: 8px;
  }

  .img {
    width: 23%;
    min-width: 100px;
    aspect-ratio: 3 / 2;
  }

  h1 {
    font-size: var(--step-1);
    line-height: 1.5;
    margin-bottom: 0;
  }

  p {
    font-size: var(--step--0);
    margin-bottom: 0;
    max-width: 45ch;
  }
</style>
